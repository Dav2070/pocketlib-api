(# params: author: TableObject, uuid: string)
(# Get the books of the author)
(var books author.properties.books)

(if (is_nil books) (
	(# Add the first book to the books of the author)
	(var author.properties.books uuid)
) else (
	(# Add the uuid to the list of books, separated by comma)
	(var author.properties.books (books + "," + uuid))
))